<configuration>
    <contextName>VMAAS Connector</contextName>
    <jmxConfigurator />
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{ISO8601, UTC} [%20.20thread] %-5level %45.45logger : %msg%n</pattern>
        </encoder>
    </appender>

    <root level="ERROR">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="com.spireon.core" level="DEBUG"/>
</configuration>